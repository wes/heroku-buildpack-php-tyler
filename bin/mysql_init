
/etc/init.d/mysql restart

mysql_secure_installation

echo "-----> Setting up MySQL Permissions"

echo "update user SET Host = '10.0.0.1' WHERE Host = '127.0.0.1';" > /tmp/mysqlimport
mysql -u root -proot -h localhost mysql < /tmp/mysqlimport
mysql_tzinfo_to_sql /usr/share/zoneinfo | mysql -u root -proot mysql > /dev/null
rm /tmp/mysqlimport

echo "-----> Finished Compiling"

echo "\n\n"

echo "You should stop your vagrant machine and create the new drive per instructions for the database.\n\n"
